<!DOCTYPE html>
<html>
<head>
    <title>Lists</title>
</head>
<body>
<h2>Lists</h2>
<p>Logged in as <%= user.email %></p>
<p>
    <a href="/groups">Groups</a> |
    <a href="/schedules">Schedules</a> |
    <a href="/logout">Logout</a>
</p>
<ul>
<% Object.keys(lists).forEach(function(name){ %>
<li>
    <%= name %> - <%= lists[name].join(', ') %>
    <form method="post" action="/lists/send" style="display:inline;">
        <input type="hidden" name="list" value="<%= name %>">
        <input type="text" name="message" placeholder="Message" required>
        <button type="submit">Send</button>
    </form>
</li>
<% }); %>
</ul>
<form method="post" action="/lists/add">
    <input type="text" name="name" placeholder="List Name" required>
    <input type="text" name="groups" placeholder="Group IDs comma separated" required>
    <button type="submit">Add List</button>
</form>
</body>
</html>
